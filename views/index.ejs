  </head>

  <body>
    <header>
      <h1>Super Chat</h1>
    </header>

    <section>
      <div id="change_username">
	<input id="username" type="text" />
	<button id="send_username" type="button">Change username</button>
      </div>
    </section>

    <section id="chatroom">
      

 
        <ul class="ulz">
          <%  let messageTotal = 0 %>
          <%  let likesTotal = 0 %>

          <% for(let i = 0; i < allMessages.length; i++) { %>

           
<li>   <!-- LI PRINTED EACH LOOP    -->
             <%  messageTotal = messageTotal + 1 %>
          <%    if (i%2) {  %>
          <div class="container darker">
              <%    } else { %>
                  <div class="container">
           <%   }  %>
 

    

         <%    if (i%2) {  %>
             <img src="icon2.png" style="float:left" alt="i%2 =true">
          <%    } else { %>
             <img src="icon3.png" style="float:left" alt="i%2 =false">
       <%   }  %>

       <a href="/messages/<%=allMessages[i].id %>">        <%=allMessages[i].user; %>:   </a>
       <div class="like" style="float:right">
        <form action="/messages/<%= allMessages[i].id %>?_method=PATCH" method="POST">
         <button style= "color:red">       <input type="submit" value="Like" /><i class="fas fa-heart"></i> <%= allMessages[i].likes; %> </button></form > 
       
            

       </div>
       <%=allMessages[i].message; %> <br>
       
             <span class="time-right">  <br>
              <%=allMessages[i].createdAt; %> </span>

        
         <% allMessages[i].likes %> <br>
       

     <br>

      <button>
         <form action="/messages/<%= allMessages[i].id %>?_method=DELETE" method="POST">
             <input type="submit" value="DELETE"  />
         </form> </button>  <span class="floaty" style="float:right">    <a href="/messages/<%=allMessages[i].id %>/edit">Edit</a></span>   

     </div>



</li>
     <% } %>





      </section>
    </section>

    

    <section id="input_zone"> 
      <section id="feedback"> </section>
      <input id="message" class="vertical-align" type="text" /> 
    
      <button id="send_message" class="vertical-align" type="button">SendLIVE</button>
      
    </section>

    <div class="navbarTop">
      <h2> <a href="/messages/">Home</a>
       <a href="#news">Contacts</a>
       <a href="#contact">Preferences</a>
       <a href="/messages/boards">Change Boards</a></h2>
       Total Messages: <%= messageTotal %>   Total Likes: <%= likesTotal %>

      </div>

       <div class="navbar">


           <form action="/messages" method="POST" >
               User: <input type="text" name="user" /><br/>
               Message: <input type="text" name="message" maxlength="250" />
               <span class="highlighter">
                     <input type="submit" name="" value="Send"/></span>
               
           

    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="chat.js"></script>
  </body>
